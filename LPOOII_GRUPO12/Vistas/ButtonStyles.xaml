<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Establece el estilo de la ventana -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="Orange"/>
    </Style>

    <!-- Establece el estilo de los input (suponiendo que los inputs sean TextBox) -->
    <Style TargetType="TextBox">
        <Setter Property="BorderBrush" Value="Purple"/>
    </Style>

    <!-- Establece el estilo del botón -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Purple"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="23"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="103,226,100,0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Width" Value="75"/>
        <EventSetter Event="Click" Handler="btnRegistrar_Click"/>
    </Style>

    <!-- Establece el estilo de todas las etiquetas -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>