<Window x:Class="Vistas.ListadoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListadoUsuario" Height="390" Width="487">
    <Grid>
        <TextBox Name="txtFilter" Width="211" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="98,22,0,0" Height="26" />
        <Button Content="Buscar" Width="61" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,22,89,0" Click="BtnSearch_Click"/>
        <DataGrid AutoGenerateColumns="False" Height="261" HorizontalAlignment="Left" Name="userGrid" VerticalAlignment="Top" Width="278" SelectionChanged="userGrid_SelectionChanged" Margin="98,63,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Usr_Nombre}" />
                <DataGridTextColumn Header="Nombre de Usuario" Binding="{Binding Usr_UserName}" />
                <!-- Agrega más columnas según las propiedades de Usuario que deseas mostrar -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
