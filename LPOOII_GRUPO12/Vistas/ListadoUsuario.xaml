<Window x:Class="Vistas.ListadoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListadoUsuario" Height="300" Width="300">
    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="261" HorizontalAlignment="Left" Name="userGrid" VerticalAlignment="Top" Width="278" SelectionChanged="userGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Usr_Nombre}" />
                <DataGridTextColumn Header="Nombre de Usuario" Binding="{Binding Usr_UserName}" />
                <!-- Agrega más columnas según las propiedades de Usuario que deseas mostrar -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
