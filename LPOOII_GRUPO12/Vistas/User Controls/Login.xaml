<UserControl x:Class="Vistas.User_Controls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" FontWeight="Normal" Height="81" Width="192">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Label Content="Usuario" FontSize="10" Foreground="Black" HorizontalAlignment="Left" Margin="12,12,0,0" Name="usuario" Width="47" Height="22" VerticalAlignment="Top" />
        <TextBox BorderBrush="#FFAB7D00" Height="22" HorizontalAlignment="Right" Margin="0,12,12,0" Name="textUsuario" VerticalAlignment="Top" Width="103" />
        <Label Content="Contraseña" FontSize="10" Foreground="Black" Height="22" HorizontalAlignment="Left" Margin="12,0,0,12" Name="password" VerticalAlignment="Bottom" Width="59" />
        <PasswordBox BorderBrush="#FFAB7D00" Height="22" HorizontalAlignment="Right" Margin="0,0,12,12" Name="textPassword" VerticalAlignment="Bottom" Width="103" />
    </Grid>
</UserControl>
