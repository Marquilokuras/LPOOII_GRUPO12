<Window x:Class="Vistas.WinWelcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinWelcome" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="/Vistas;component/Images/Fondo%20Login.png" />
    </Window.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/Images/Fondo%20Login1.png" />
        </Grid.Background>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="12,75,0,160" Name="usuario" Width="47" Target="{Binding}" FontSize="10" />
        <TextBox Height="16" HorizontalAlignment="Right" Margin="0,77,134,0" Name="textUsuario" VerticalAlignment="Top" Width="87" TextChanged="textUsuario_TextChanged" DataContext="{Binding}" BorderBrush="#FFAB7D00" />
       
        <Label Content="Contraseña" Height="27" HorizontalAlignment="Left" Margin="12,102,0,0" Name="password" VerticalAlignment="Top" Width="63" FontSize="10" />
        <TextBox Height="16" HorizontalAlignment="Right" Margin="0,104,134,0" Name="textPassword" VerticalAlignment="Top" Width="70" BorderBrush="#FFAB7D00" />
        <Button Content="Ingresar" Height="20" HorizontalAlignment="Left" Margin="29,135,0,0" Name="btnSession" VerticalAlignment="Top" Width="84" Click="btnSession_Click" FontSize="10" ClickMode="Release" Background="White" BorderBrush="#FFAB7D00" Foreground="#FF030305" />
    </Grid>
</Window>
