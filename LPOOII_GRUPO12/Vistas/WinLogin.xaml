<Window x:Class="Vistas.WinWelcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinWelcome" Height="300" Width="300">
    <Grid>
        <Label Content="Usuario" Height="31" HorizontalAlignment="Left" Margin="12,13,0,0" Name="usuario" VerticalAlignment="Top" Width="97" />
        <TextBox Height="14" HorizontalAlignment="Left" Margin="128,25,0,0" Name="textUsuario" VerticalAlignment="Top" Width="128" TextChanged="textUsuario_TextChanged" DataContext="{Binding}" />
       
        <Label Content="Contraseña" Height="29" HorizontalAlignment="Left" Margin="12,77,0,0" Name="password" VerticalAlignment="Top" Width="76" />
        <TextBox Height="14" HorizontalAlignment="Left" Margin="128,81,0,0" Name="textPassword" VerticalAlignment="Top" Width="128" />
        <Button Content="Ingresar" Height="25" HorizontalAlignment="Left" Margin="50,151,0,0" Name="btnSession" VerticalAlignment="Top" Width="188" Click="btnSession_Click" />
    </Grid>
</Window>
